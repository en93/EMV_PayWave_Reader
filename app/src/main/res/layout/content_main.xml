<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.development.ian.nfc_ian.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/content_view">


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="@string/message_initial"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="45dp"
        android:text="@string/pan_initial"
        android:layout_below="@+id/message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/issuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/issuer_initial"
        android:layout_below="@+id/pan"
        android:layout_alignLeft="@+id/pan"
        android:layout_alignStart="@+id/pan"/>

    <TextView
        android:id="@+id/expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expiry_initial"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/issuer"
        android:layout_alignLeft="@+id/issuer"
        android:layout_alignStart="@+id/issuer"/>
</RelativeLayout>









